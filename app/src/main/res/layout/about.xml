<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/logopic"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:src="@drawable/homefitness_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icoico"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/my_face_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@id/logopic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Home Fitness"
        android:fontFamily="@font/qanelas"
        android:textColor="#473E3E"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logopic"
        app:layout_constraintTop_toBottomOf="@id/icoico" />

    <TextView
    android:id="@+id/version"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:text="Course Android 2"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/logopic"
    app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/dima_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Dima Tepliakov"
        android:fontFamily="@font/qanelas"
        android:textColor="#473E3E"
        app:layout_constraintStart_toEndOf="@id/logopic"
        app:layout_constraintTop_toBottomOf="@id/version" />

    <TextView
        android:id="@+id/mike_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Mike Rozentsveig"
        android:fontFamily="@font/qanelas"
        android:textColor="#473E3E"
        app:layout_constraintStart_toEndOf="@id/logopic"
        app:layout_constraintTop_toBottomOf="@id/dima_name" />


</android.support.constraint.ConstraintLayout>